<?xml version="1.0"?>
<config>
    <modules>
        <RBCommunications_HidePaymentMethod>
            <version>1.0.0</version>
        </RBCommunications_HidePaymentMethod>
    </modules>
    <global>
        <models>
            <rbcommunications_hidepaymentmethod>
                <class>RBCommunications_HidePaymentMethod_Model</class>
            </rbcommunications_hidepaymentmethod>
        </models>
    </global>
    <frontend>
        <events>
            <payment_method_is_active>
                <observers>
                    <disable_banktransfer_payment_frontend>
                        <type>model</type>
                        <class>RBCommunications_HidePaymentMethod_Model_Observer</class>
                        <method>hidePaymentMethod</method>
                    </disable_banktransfer_payment_frontend>
                </observers>
            </payment_method_is_active>
        </events>
    </frontend>
</config>
